{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"es2015"
		],
		"outDir": "./dist"
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules"
	]
}
